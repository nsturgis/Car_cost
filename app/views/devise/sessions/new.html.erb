<div class= "panel cost transparent">
<h2>Log in</h2>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="large-7 columns">
  <div><%= f.label :email, class: "label" %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label :password, class: "label" %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: "label" %></div>
  <% end -%>

  <div><%= f.submit "Log in", class: "button large alert" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
